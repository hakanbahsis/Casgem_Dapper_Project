@model WebUI.DAL.Entities.Headings

@{
    ViewData["Title"] = "AddHeading";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddHeading</h1>

<h4>Headings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHeading">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="HeadingName" class="control-label"></label>
                <input asp-for="HeadingName" class="form-control" />
                <span asp-validation-for="HeadingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
